@model AddressBookApp.Models.Contact
@{
    ViewData["Title"] = "Contacts";
}


@{ Layout = null; }

<div id='myModal2' class='modal'>
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div id='ModalEditContacts' class="modal-body">
                <h4>Edit Contact</h4>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ContactID" class="control-label"></label>
                                <input asp-for="ContactID" class="form-control" id="contactid" />
                                <span asp-validation-for="ContactID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" id="fnedit" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" id="lnedit" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <a href="#" class="btn btn-dark" id="editContact">Save Contact</a>
                            <a href="#" class="btn btn-dark" onclick="deleteContact(@Model.ContactID)">Delete Contact</a>
                            <a href="#" onclick="openAddressModal()" class="btn btn-dark">Add Address</a>
                            <br />
                            <br />
                        </form>

                        <table id="AddressTable" class="display responsive nowrap" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>AddressID</th>
                                    <th>StreetAddress</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>PostalCode</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

